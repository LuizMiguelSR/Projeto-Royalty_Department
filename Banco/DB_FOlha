create table local(
local_id int(8) not null,
endereco varchar(50),
estado char(2),
pais varchar(20),
CONSTRAINT pk_local_id primary key (local_id));

create table departamento(
departamento_id int(8) not null, 
dp_nome varchar(50), 
id_chefe int(8),
id_local int(8),
constraint pk_departamento_id primary key (departamento_id),
constraint fk_departamento_id_chefe FOREIGN KEY (id_chefe) referenceres funcionario(f_id),
constraint fk_departamento_local FOREIGN KEY (id_local) references local(id_local)
);

create table trabalho(
trabalho_id int(8) not null, 
nm_trabalho varchar(50),
sa_min double(10,2),
sa_max double(10,2),
constraint pk_trabalho primary key (trabalho_id));

create table historico(
historico_id int(8) not null,
funcionario_id
);
