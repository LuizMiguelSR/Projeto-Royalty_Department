CREATE DATABASE FHR;

USE FHR;

create table endereco ( 
id_endereco int(8) auto_increment,
rua varchar(50),
numero int(6), 
cep varchar(50), 
complemento varchar(50),
cidade varchar(50),
bairro varchar(50),
estado varchar(50),
pais varchar(50),
contraint pk_id_endereco primary key(id_endereco));

create table funcionario (
id_funcionario int(8) auto_increment,
nome_funcionario varchar(50),
registrogeral varchar(50), 
cpf varchar(50),
senha varchar(50),
email varchar(50), 
telefone int(20),
departamento varchar(50),
cargoAtual double(20),
dependente varchar(50),
numeroDependentes int(2),
constraint pk_id_funcionario primary key(id_funcionario),
constraint fk_funcionario_enredereco foreign key (id_endereco) refenreces endereco(id_endereco));

create table holerite(
id_holerite auto_increment,
id_funcionario int(8),
nome_funcionario varchar(50),
departamento varchar(50),
data_inicio DATE,
data_Final DATE,
salariobase double(15,2),
salarioliquido double(15,2),
totaldescontos double(15,2),
irrf double(15,2),
diasuteis int(20),
inss double(15,2),
constraint pk_id_holerite primary key(id_holerite), 
constraint fk_holerite_funcionario foreign key (id_funcionario) references funcionario(id_funcionario));
